	public void  checkSpecialCharacters(String strcheck )
	{
		
		Pattern regex = Pattern.compile("[,″&<>′]");
		Matcher matcher = regex.matcher(strcheck);
		if (matcher.find())
		{
			RtoDialog.showNeutralDialog(ActivityLearnLicAppointment_Tab3.this,"Form Restrictions","Special Character (″ , & , < , > , ′ ) are not allowed");
		}
		else
		{
			
		}
		
		
	}
	
	
	
	
	
