
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btn_MotorVehicleTax"
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:background="@drawable/motor_vehicle_tax"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_ProfessionalTax"
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:layout_alignLeft="@+id/btn_Environmenttax"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/professional_tax"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_Environmenttax"
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:layout_above="@+id/btn_ProfessionalTax"
        android:layout_alignLeft="@+id/btn_MotorVehicleTax"
        android:layout_marginBottom="23dp"
        android:background="@drawable/environment_tax"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout> 