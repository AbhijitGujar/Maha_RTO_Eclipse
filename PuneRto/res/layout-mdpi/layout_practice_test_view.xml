<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="777dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.74"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_PracticeTestQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:text="Practice Test Question"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1232332"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_launcher" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio_Opt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:checked="true"
                    android:text="RadioButton"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/radio_Opt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RadioButton"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/radio_Opt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RadioButton"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_AnsSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="70dp"
                android:text="Submit"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>