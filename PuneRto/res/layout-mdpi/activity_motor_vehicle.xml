<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="869dp" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="37dp"
            android:layout_toRightOf="@+id/textView2" >
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroup1"
            android:layout_alignTop="@+id/textView3" >
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroup2"
            android:layout_alignTop="@+id/textView4" >
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroup3"
            android:layout_alignTop="@+id/textView5" >

        </RadioGroup>

        <TextView
            android:id="@+id/txt_CalculateShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/btn_Calculate"
            android:text=""
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:text="Tax Calculator for Non-Motor Vehicle"
            android:textColor="#000000"
            android:textSize="29dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_MotorCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView6"
            android:checked="true"
            android:textSize="20dp"
            android:text="Motor Cycle" />

        <RadioButton
            android:id="@+id/radio_indian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/radio_MotorCycle"
            android:checked="true"
            android:textSize="20dp"
            android:text="Indian" />

        <RadioButton
            android:id="@+id/radio_Imported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio_indian"
            android:layout_below="@+id/radio_indian"
            android:textSize="20dp"
            android:text="Imported" />

        <RadioButton
            android:id="@+id/radio_Individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio_Imported"
            android:layout_alignTop="@+id/radioGroup3"
            android:checked="true"
            android:textSize="20dp"
            android:text="Individual" />

        <RadioButton
            android:id="@+id/radio_Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/radio_Individual"
            android:layout_below="@+id/radio_Individual"
            android:textSize="20dp"
            android:text="Company" />

        <RadioButton
            android:id="@+id/radio_four_Wheeler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio_Company"
            android:layout_below="@+id/radio_MotorCycle"
            android:textSize="20dp"
            android:text="4 Wheeler" />

        <RadioButton
            android:id="@+id/radio_Disel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio_Petrol"
            android:layout_below="@+id/radio_Petrol"
            android:textSize="20dp"
            android:text="Disel" />

        <RadioButton
            android:id="@+id/radio_Battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio_Company"
            android:layout_below="@+id/radio_Disel"
            android:textSize="20dp"
            android:text="Battery Operated" />

        <RadioButton
            android:id="@+id/radio_Cng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/radio_Battery"
            android:layout_below="@+id/radio_Battery"
            android:text="CNG/LPG" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/radio_Imported"
            android:layout_marginTop="47dp"
            android:text="   Ownership :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/radio_four_Wheeler"
            android:layout_marginTop="48dp"
            android:text="             Type :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="65dp"
            android:text="Select Type  :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edt_CostOfVehicle"
            android:layout_below="@+id/edt_CostOfVehicle"
            android:layout_marginTop="21dp"
            android:text="Tax (in Rs)"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Cancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_Calculate"
            android:layout_alignBottom="@+id/btn_Calculate"
            android:layout_alignRight="@+id/edt_CostOfVehicle"
            android:text="Cancel"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_Calculate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_CalculateShow"
            android:layout_toLeftOf="@+id/radio_Individual"
            android:text="Calculate"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_Company"
            android:layout_marginTop="35dp"
            android:layout_toLeftOf="@+id/radioGroup1"
            android:text="   Type of Fuel :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_Petrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio_Battery"
            android:layout_alignTop="@+id/radioGroup4"
            android:checked="true"
            android:text="Petrol"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_CostOfVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/radio_Cng"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Enter cost of vehicle"
            android:inputType="number"
            android:textSize="20dp" >

            <requestFocus />
        </EditText>

    </RelativeLayout>

</ScrollView>