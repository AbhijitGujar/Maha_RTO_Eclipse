<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_Taxi"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btn_ElectricMeter"
        android:layout_alignRight="@+id/btn_MechanicMeter"
        android:layout_below="@+id/btn_ElectricMeter"
        android:layout_marginTop="120dp"
        
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="         TAXI       " />

    <Button
        android:id="@+id/btn_ElectricMeter"
        android:layout_width="300dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btn_MechanicMeter"
        android:layout_below="@+id/btn_MechanicMeter"
        android:layout_marginTop="120dp"
        android:text="Electric Meter Auto" />

    <Button
        android:id="@+id/btn_MechanicMeter"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="Mechanic Meter Auto"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
