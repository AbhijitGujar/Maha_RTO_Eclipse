<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="646dp" >

        <TextView
            android:id="@+id/txt_OfficeNameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_OfficeIdDetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Office Name"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_OfficeIdDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="MH"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tXT"
            android:layout_below="@+id/tXT"
            android:layout_marginTop="99dp"
            android:text="टेलिफोन क्रमांक  :"
             android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_TelNo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_TelNo1"
            android:layout_below="@+id/txt_TelNo1"
            android:layout_marginTop="24dp"
            android:textSize="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/txt_TelNo"
            android:layout_marginTop="22dp"
            android:textStyle="bold"
             android:textSize="22dp"
            android:textColor="#000000"
            android:text="इ मेल आय डी :" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="39dp"
            android:textColor="#000000"
             android:textSize="22dp"
            android:textStyle="bold"
            android:text="फॅक्स :" />

        <TextView
            android:id="@+id/txt_Fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/txt_EmailAddress"
            android:textSize="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_OfficeNameDetails"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="अधिकार्याचे नाव :"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_EmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/txt_OfficeIdDetails"
            android:textSize="20dp"
            android:autoLink="web|email"
            android:text="email Address" />

        <TextView
            android:id="@+id/txt_TelNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_EmailAddress"
            android:layout_below="@+id/txt_telNo3"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_telNo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_TelNo"
            android:layout_below="@+id/txt_TelNo2"
            android:textSize="20dp"
            android:layout_marginTop="28dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_TelNo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/txt_telNo3"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/tXT"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/tXT"
            android:layout_alignLeft="@+id/txt_OfficeIdDetails"
            android:text="Address" />

        <TextView
            android:id="@+id/txt_OfficerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tXT"
            android:layout_alignLeft="@+id/txt_Address"
            android:text="OfficerName"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="58dp"
            android:text="पत्ता :"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />
        
    </RelativeLayout>

</ScrollView>