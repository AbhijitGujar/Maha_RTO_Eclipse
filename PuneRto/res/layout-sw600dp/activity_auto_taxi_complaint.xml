<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1695dp" >

        <Spinner
            android:id="@+id/spinner_fistAlpha"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/spinner_OnlyMhNo"
            android:layout_toRightOf="@+id/spinner_OnlyMhNo"
            android:entries="@array/spinner_onlyFirstAlph" />

        <Spinner
            android:id="@+id/spinner_LastAlpha"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/spinner_fistAlpha"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/spinner_fistAlpha"
            android:entries="@array/spinner_onlyLastAlph" />

        <NumberPicker
            android:id="@+id/pickerTwo"
            android:layout_width="40dp"
            android:layout_height="110dp"
            android:layout_below="@+id/spinner_OnlyMhNo"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/picker_first" />

        <NumberPicker
            android:id="@+id/pickerThree"
            android:layout_width="40dp"
            android:layout_height="110dp"
            android:layout_below="@+id/spinner_fistAlpha"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/pickerTwo" />

        <NumberPicker
            android:id="@+id/picker_first"
            android:layout_width="40dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/pickerTwo"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/txt_ChooseOffice" />

        <NumberPicker
            android:id="@+id/pickerFour"
            android:layout_width="40dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/pickerThree"
            android:layout_toRightOf="@+id/pickerThree" />

        <TextView
            android:id="@+id/txt_ChooseOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:text="Choose Office :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView1" >
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_toRightOf="@+id/txt_Upload"
            android:orientation="horizontal" >
        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/timePicker1"
            android:layout_marginTop="400dp"
            android:text="Mobile Number :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chkBoxRudeBehave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chkBoxRefusal"
            android:layout_below="@+id/textView9"
            android:layout_toLeftOf="@+id/pickerFour"
            android:onClick="itemClickedRudeBehaviour"
            android:text="Rude Behaviour" />

        <CheckBox
            android:id="@+id/chkBoxIDNotDisplayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chkBoxExcessFare"
            android:layout_below="@+id/chkBoxRudeBehave"
            android:onClick="itemClickedId"
            android:text="Badge/ID Card/Tariff Card Not Displayed" />

        <CheckBox
            android:id="@+id/chkBoxExcessFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chkBoxRefusal"
            android:layout_below="@+id/chkBoxIDNotDisplayed"
            android:onClick="itemClickedExcessFare"
            android:text="Excess Fare" />

        <CheckBox
            android:id="@+id/chkBoxTakLongDistRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chkBoxExcessFare"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/chkBoxExcessFare"
            android:onClick="itemClickedTakingLong"
            android:text="Taking Long Distance Route" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_below="@+id/chkBoxOther"
            android:layout_marginTop="19dp"
            android:text="Route From :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtComplainantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Enter Complaints name" />

        <EditText
            android:id="@+id/edtComplainantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Complaint Address" />

        <EditText
            android:id="@+id/edtPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:maxLength="10" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtComplainantAddress"
            android:layout_below="@+id/edtComplainantAddress"
            android:layout_marginTop="18dp"
            android:text="Complaint Type:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtRouteFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Route From"
            android:visibility="gone" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtRouteFrom"
            android:layout_below="@+id/edtRouteFrom"
            android:layout_marginTop="22dp"
            android:text="Route To:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"
             />

        <EditText
            android:id="@+id/edtRouteTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView01"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Rout To"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtEmailID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Enter Email id"
            android:inputType="textWebEmailAddress" />

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Type message here"
            android:inputType="textMultiLine"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/edtPhoneNum"
            android:layout_marginTop="19dp"
            android:text="Complaint&apos;s Name:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtComplainantName"
            android:layout_below="@+id/edtComplainantName"
            android:layout_marginTop="16dp"
            android:text="Complainant&apos;s Address:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView11"
            android:layout_below="@+id/edtEmailID"
            android:layout_marginTop="14dp"
            android:text="Message"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtRouteTo"
            android:layout_below="@+id/edtRouteTo"
            android:layout_marginTop="22dp"
            android:text="E-mail ID:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chkBoxOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chkBoxTakLongDistRoute"
            android:layout_below="@+id/chkBoxTakLongDistRoute"
            android:onClick="itemClicked"
            android:text="Other" />

        <CheckBox
            android:id="@+id/chkBoxRefusal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toRightOf="@+id/textView5"
            android:onClick="itemClickedRefusal"
            android:text="Refusal" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_Upload"
            android:layout_below="@+id/spinner_RtoList"
            android:layout_marginTop="62dp"
            android:text="Choose Type   :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_RtoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chkBoxRefusal"
            android:layout_alignTop="@+id/txt_ChooseOffice"
            android:entries="@array/spinner_item" />

        <RadioButton
            android:id="@+id/radio01"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView7"
            android:checked="true"
           android:onClick="itemAuto1"
            android:text="Auto" />

        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:layout_marginLeft="60dp"
            android:layout_alignRight="@+id/spinner_fistAlpha"
            android:layout_below="@+id/btn_Camera"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_Upload"
            android:layout_below="@+id/img_selected"
            android:layout_marginTop="54dp"
            android:text="Motor Vehicle No:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup3"
            android:layout_marginTop="108dp"
            android:layout_toLeftOf="@+id/picker_first"
            android:text="Upload Image :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_OnlyMhNo"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/chkBoxOther"
            android:entries="@array/spinner_onlyMhItem" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/picker_first"
            android:layout_marginTop="93dp"
            android:text="Select Time"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="220dp"
            android:layout_height="140dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView8" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignRight="@+id/pickerThree"
            android:layout_alignTop="@+id/radio01"
            android:src="@drawable/auto" />

        <RadioButton
            android:id="@+id/radio11"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/radio01"
            android:layout_alignBottom="@+id/radio01"
            android:layout_toRightOf="@+id/img_selected"
             android:onClick="itemAuto"
            android:text="Taxi" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toRightOf="@+id/spinner_LastAlpha"
            android:src="@drawable/taxi" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/textView3"
            android:layout_marginBottom="159dp"
            android:text="Select Date"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/calendarView1"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/spinner_OnlyMhNo"
            android:layout_marginBottom="60dp" />

        <Button
            android:id="@+id/btn_SendData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtEmailID"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:textSize="25dp"
            android:text="    Send    "
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_Camera"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/txt_Upload"
            android:layout_alignRight="@+id/chkBoxExcessFare"
            android:background="@drawable/camera"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_Gallery"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/btn_Camera"
            android:layout_alignBottom="@+id/btn_Camera"
            android:layout_toLeftOf="@+id/imageView2"
            android:background="@drawable/pic"
            android:textColor="#000000"
            android:textSize="16dp" />

    </RelativeLayout>

</ScrollView>