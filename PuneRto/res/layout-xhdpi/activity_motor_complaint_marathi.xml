<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="616dp"
        android:background="#D5B1DA" >

        <Spinner
            android:id="@+id/spinner_motorComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="142dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:entries="@array/spinner_itemMarathi" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/spinner_motorComplaint"
            android:layout_marginLeft="10dp"
            android:text="कार्यालय निवडा :"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignRight="@+id/spinner_motorComplaint"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="नाव इथे लिहा " >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText1"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="21dp"
            android:text="इ मेल आय डी :"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignRight="@+id/editText1"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="इ मेल आय डी इथे लिहा" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText3"
            android:layout_below="@+id/editText3"
            android:layout_marginTop="18dp"
            android:text="मोबाइल क्रमांक  :"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignRight="@+id/editText3"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="20dp"
            android:maxLength="10"
            android:inputType="number"
            android:ems="10"
            android:hint="मोबाइल क्रमांक " />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText4"
            android:layout_below="@+id/editText4"
            android:layout_marginTop="14dp"
            android:text="तक्रार :"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignRight="@+id/editText4"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="तक्रार"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/spinner_motorComplaint"
            android:layout_marginTop="22dp"
            android:text="तक्रार नाव :"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_SendOtherComplentMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText5"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@+id/textView1"
            android:text="   तक्रार पाठवा    "
            android:textColor="#000000"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>